@model IEnumerable<ECommerce.Entities.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <a asp-controller="Category" asp-action="Insert" class="btn btn-rounded btn-info pull-right">Yeni Kategori Ekle</a>
    </div>
</div>

<br>
<div class="card-header">
    <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
    <div class="row">
        <div class="col-12">
            <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example2_info">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
                        <th>Ayarlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @category.Id
                            </td>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                <img src="~/images/@category.ImagePath"
                                     class="rounded-circle"
                                     height="40" width="40"
                                     asp-append-version="true" />
                            </td>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">SİL</a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#example2').DataTable();
        });
    </script>
}